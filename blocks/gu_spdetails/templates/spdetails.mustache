{{!
    @template block_gu_spdetails/spdetails
}}
{{#hasassessments}}
    <div class="assessments-details-container table-responsive">
        <table class="table assessments-table" id="block_spdetails_table">
            <thead>
                <tr>
                    <th scope="col" class="header-sortable" onclick="sortByCourse(this)">
                        {{header_course}}
                        <img src="{{downarrow_img}}" id="gu_spdetails_tableheader_course">
                    </th>
                    <th scope="col">{{header_assessment}}</th>
                    <th scope="col">{{header_weight}}</th>
                    <th scope="col" class="header-sortable" onclick="sortByDate(this)" id="gu_spdetails_tableheader_duedate">
                        {{header_duedate}}
                        <img src="{{downarrow_img}}">
                    </th>
                    <th scope="col">{{header_status}}</th>
                    <th scope="col">{{header_grade}}</th>
                    <th scope="col">{{header_feedback}}</th>
                </tr>
            </thead>
            <tbody>
                {{#data}}
                    <tr>
                        <td>
                            <a href="{{courserecord.url}}">
                                {{courserecord.coursename}}
                            </a>
                        </td>
                        <td>
                            <a href="{{assessment.url}}">
                                {{assessment.name}}
                            </a>
                        </td>
                        <td>
                            {{formatted.weight}}
                        </td>
                        <td style="display:none;">
                            {{assessment.actualduedate}}
                        </td>
                        <td>
                            {{#assessment.hasextension}} 
                                {{formatted.extensionduedate}}<span class="extended">*</span>
                            {{/assessment.hasextension}}
                            {{^assessment.hasextension}}
                                {{formatted.duedate}}
                            {{/assessment.hasextension}}
                        </td>
                        <td>
                            {{#submission}}
                                {{#submission.hasurl}}
                                    <a href="{{assessment.url}}" class="status-link">
                                        <span class="status-item status-{{submission.suffix}}">{{submission.status}}</span>
                                    </a>
                                {{/submission.hasurl}}
                                {{^submission.hasurl}}
                                    <span class="status-item status-{{submission.suffix}}">{{submission.status}}</span>
                                {{/submission.hasurl}}
                            {{/submission}}
                            {{^submission}}
                                -
                            {{/submission}}
                        </td>
                        <td>{{grades.gradetext}}</td>
                        <td>
                            {{#feedback.hasurl}}
                                <a href="{{assessment.url}}">
                                    {{feedback.text}}
                                </a>
                            {{/feedback.hasurl}}
                            {{^feedback.hasurl}}
                                {{feedback.text}}
                            {{/feedback.hasurl}}
                        </td>
                    </tr>
                {{/data}}
            </tbody>
        </table>
    </div>
{{/hasassessments}}
{{^hasassessments}}
    <div class="assessments-details-container assessments-details-empty text-center mx-auto">
        <img src="{{noassessments_img}}" alt="{{noassessments}}" class="assessments-img-empty">
        <p class="assessments-text-empty">{{noassessments}}</p>
    </div>
{{/hasassessments}}
