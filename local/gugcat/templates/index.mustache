                        <td>{{id}}</td>
                        <td>101282</td>
                        <td>{{lastname}}</td>
                        <td>{{firstname}}</td>
                        <td>A1 <i class="fa fa-ellipsis-h"></i></td>
                        <td>A2 <i class="fa fa-ellipsis-h"></i></td>
                        <td><b>A2</b></td>
                        <td>
                            <div class="selectdiv">
                                <select>
                                    <option>Choose grade</option>
