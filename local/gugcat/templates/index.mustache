                    {{/activities}}
                </select>
            </div>
            <button class="btn btn-default btn-add">{{addsavebtnstr}}</button>
            <button class="btn btn-default btn-download">Download .csv</button>
        </div>
        <div class="table-responsive">          
            <table class="table">
                <thead>
                    <tr>
